<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<StackPane fx:id="stackPane" styleClass="roundPane" stylesheets="@../style/Style.css"
           xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="library.controller.LoginFormController">
    <children>
        <AnchorPane fx:id="rootPane" prefHeight="321.0" prefWidth="632.0" styleClass="roundPane"
                    stylesheets="@../style/Style.css">
            <children>
                <ImageView fx:id="bgImage" fitHeight="321.0" fitWidth="632.0" pickOnBounds="true">
                    <image>
                        <Image url="@../images/login.jpg"/>
                    </image>
                </ImageView>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="321.0" opacity="0.41" stroke="BLACK"
                           strokeType="INSIDE" strokeWidth="0.0" width="632.0"/>
                <Label layoutX="281.0" layoutY="8.0" text="Login" textFill="#66403b">
                    <font>
                        <Font name="Calisto MT" size="28.0"/>
                    </font>
                </Label>
                <JFXTextField fx:id="txtUsername1" labelFloat="true" layoutX="190.0" layoutY="72.0" prefHeight="31.0"
                              prefWidth="253.0" promptText="Username">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </JFXTextField>
                <JFXPasswordField fx:id="txtPassword1" labelFloat="true" layoutX="190.0" layoutY="142.0"
                                  prefHeight="31.0" prefWidth="253.0" promptText="Password">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </JFXPasswordField>
                <JFXButton fx:id="btnLogin1" buttonType="RAISED" defaultButton="true" layoutX="190.0" layoutY="229.0"
                           onAction="#btnLoginClick" prefHeight="34.0" prefWidth="253.0" styleClass="loginButton"
                           stylesheets="@../style/Style.css" text="Login" textFill="WHITE">
                    <font>
                        <Font name="System" size="15.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnCancel1" buttonType="RAISED" cancelButton="true" layoutX="190.0" layoutY="273.0"
                           onAction="#btnCancelClick" prefHeight="34.0" prefWidth="253.0" styleClass="loginButton"
                           stylesheets="@../style/Style.css" text="Cancel" textFill="WHITE">
                    <font>
                        <Font name="System" size="15.0"/>
                    </font>
                </JFXButton>
            </children>
        </AnchorPane>
    </children>
</StackPane>
